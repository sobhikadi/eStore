@page
@model eStore.Pages.LogInModel
@{
    ViewData["Title"] = "LogIn";
}
<div class="container my-5 pb-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="images/loginimage.jpg"
                 class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <h1 class="mb-4 pb-2 pb-md-0 mb-md-5" style="color: #92C5C8;">LogIn</h1>
            <form method="post">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" asp-for="UserName">Email address</label>
                    <input type="email" asp-for="UserName" class="form-control form-control-lg"
                           placeholder="Enter a valid email address" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-3">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Enter password" />
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <!-- Checkbox -->
                    <div class="form-check mb-0">
                        <input class="form-check-input me-2" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">
                            Remember me
                        </label>
                    </div>
                    <a href="#!" class="text-body">Forgot password?</a>
                </div>
                <p>@ViewData["LoginMessage"]</p>
                <div class="text-center text-lg-start mt-4 pt-2 d-grid col-12 col-sm-7">
                    <button type="submit" class="btn btn-lg"
                            style="padding-left: 2.5rem; padding-right: 2.5rem; background-color: #92C5C8;">
                        Login
                    </button>
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Don't have an account? <a asp-page="/SignUp" class="link-danger">Register</a>
                    </p>
                </div>

            </form>
        </div>
    </div>
</div>